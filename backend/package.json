{
  "name": "ethio-shop-backend",
  "version": "1.0.0",
  "description": "Ethio Shop - Ethiopian Marketplace Backend API",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest --verbose --coverage",
    "test:watch": "jest --watch",
    "test:e2e": "jest --config jest.e2e.config.js",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write src/",
    "db:migrate": "node src/db/migrate.js",
    "db:seed": "node src/db/seed.js",
    "db:reset": "node src/db/reset.js",
    "generate:docs": "node src/utils/generateDocs.js",
    "docker:build": "docker build -t ethio-shop-backend .",
    "docker:run": "docker run -p 8080:8080 ethio-shop-backend"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "compression": "^1.7.4",
    "express-rate-limit": "^6.10.0",
    "express-slow-down": "^1.5.0",
    "express-validator": "^7.0.1",
    "pg": "^8.11.0",
    "redis": "^4.6.7",
    "jsonwebtoken": "^9.0.1",
    "bcryptjs": "^2.4.3",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.33.0",
    "firebase-admin": "^11.10.1",
    "socket.io": "^4.7.2",
    "joi": "^17.9.2",
    "dotenv": "^16.1.4",
    "winston": "^3.9.0",
    "winston-daily-rotate-file": "^4.7.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "moment-timezone": "^0.5.43",
    "node-cron": "^3.0.3",
    "axios": "^1.5.0",
    "nodemailer": "^6.9.7",
    "twilio": "^4.19.1",
    "stripe": "^14.17.0",
    "uuid": "^9.0.0",
    "i18n": "^0.15.1",
    "express-async-errors": "^3.1.1",
    "apicache": "^1.6.3",
    "request-ip": "^3.3.0",
    "useragent": "^2.3.0"
  },
  "devDependencies": {
    "nodemon": "^2.0.22",
    "jest": "^29.5.0",
    "supertest": "^6.3.3",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "prettier": "^2.8.8",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.4.5",
    "ts-jest": "^29.1.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "ethiopia",
    "marketplace",
    "ecommerce",
    "api",
    "nodejs",
    "express",
    "postgresql",
    "redis"
  ],
  "author": "Ethio Shop Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ethmmarit-apk/Ethio-shop.git"
  }
}